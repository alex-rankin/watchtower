{
  "name": "watchtower",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace @watchtower/backend dev\" \"yarn workspace @watchtower/frontend dev\"",
    "build": "yarn workspace @watchtower/frontend build && yarn workspace @watchtower/backend build",
    "start": "yarn workspace @watchtower/backend start",
    "lint": "yarn workspaces foreach run lint",
    "format": "yarn workspaces foreach run format",
    "lint:fix": "yarn workspaces foreach run lint:fix",
    "typecheck": "yarn workspaces foreach run typecheck"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  },
  "packageManager": "yarn@1.22.22"
}
